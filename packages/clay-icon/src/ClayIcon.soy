{namespace ClayIcon}

/**
 * This renders an icon element based on the Clay Icon definition.
 */
{template .render}
	{@param spritemap: string}
	{@param symbol: string}
	{@param? monospaced: bool}

	{let $classes kind="text"}
		lexicon-icon
		{sp}lexicon-icon-{$symbol}
		{if $monospaced}
			{sp}icon-monospaced
		{/if}
	{/let}

	<svg aria-hidden="true" class="{$classes}">
		<use xlink:href="{$spritemap}#{$symbol}" />
	</svg>
{/template}