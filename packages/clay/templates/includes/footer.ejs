		</section>
	</div>
	<script>
		YUI().use(
			'node', 'transition',
			function(A) {
				A.one('#headerTopBar .navbar-toggle').on(
					'click',
					function(event) {
						var ct = event.currentTarget;
						var sidenavContainer = ct.ancestor('#headerTopBar').next('.sidenav-container');

						event.preventDefault();

						sidenavContainer.on(
							'transitionend',
							function(event) {
								sidenavContainer.removeClass('sidenav-transition');

								this.detach('transitionend');
							}
						);

						sidenavContainer.toggleClass('closed').addClass('sidenav-transition');
						ct.ancestor('#wrapper').toggleClass('main-nav-open');
					}
				);

				A.all('.side-navigation').each(
					function(item, index) {
						item.delegate(
							'click',
							function(event) {
								event.preventDefault();
								event.currentTarget.next('.collapse').toggleClass('in');
							},
							'li.side-navigation-dropdown-container > a'
						);
					}
				);
			}
		);
	</script>
